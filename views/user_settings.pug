doctype html
html
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title User Settings - Surakarta
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha256-NJWeQ+bs82iAeoT5Ktmqbi3NXwxcHlfaVejzJI2dklU=" crossorigin="anonymous")
    link(rel='stylesheet' href='/stylesheets/signup.css')
  body
    .user-body
      h1 User Settings
      if error === true
        .alert.alert-danger(role="alert")=errorMsg
      form(method='post')
        .form-group.row
          label.col-sm-4.col-form-label(for='staticUsername') Username
          .col-sm-8
            input#staticUsername.form-control-plaintext(name='username' type='text' readonly value=username)
        .form-group.row
          label.col-sm-4.col-form-label(for='origPassword') Current Password
          .col-sm-8
            input#origPassword.form-control(name='password' type='password')
        .form-group.row
          label.col-sm-4.col-form-label(for='newPassword') New Password
          .col-sm-8
            input#newPassword.form-control(name='new_password' type='password')
        .form-group.row
          label.col-sm-4.col-form-label(for='verifyPassword') Verify Password
          .col-sm-8
            input#verifyPassword.form-control(name='verify_password' type='password')
        button.btn.btn-primary.btn-block Save Changes
        button.btn.btn-outline-danger.btn-block.mt-3(type='button' disabled) Delete this Account (coming soon)